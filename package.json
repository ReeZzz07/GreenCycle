{
  "name": "greencycle",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "prepare": "husky install",
    "lint": "pnpm lint:frontend && pnpm lint:backend",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:backend": "pnpm --filter backend lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "typecheck": "pnpm typecheck:frontend && pnpm typecheck:backend",
    "typecheck:frontend": "pnpm --filter frontend typecheck",
    "typecheck:backend": "pnpm --filter backend typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.0.2",
    "prettier": "^3.1.0",
    "turbo": "^1.11.2",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.{md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
